void tBoard(char x[3][3]) {
	cout << "     |     |     /n";
	cout << "  "<<x[0][0]<<"  |  "<<x[0][1]<<" |  "<<x[0][1]<<"   /n";
	cout << "_____|_____|_____/n";
	cout << "     |     |     /n";
	cout << "  "<<x[1][0]<<" |   "<<x[1][1]<<" |  "<<x[1][2]<<"    /n";
	cout << "_____|_____|_____/n";
	cout << "     |     |     /n";
	cout << "  "<<x[2][0]<<"  |  "<<x[2][1]<<" |  "<<x[2][2]<<"  /n";
	cout << "     |     |     /n";


}
